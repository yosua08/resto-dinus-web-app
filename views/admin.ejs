<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ADMIN - RESTO DINUS</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>

<body>
    <div class="container-fluid">
      <h2><%= title %></h2>

      <div class="d-flex bd-highlight" style="margin: 5px;">
        <div class="container shadow p-3 mb-5 bg-body rounded" style="margin: 5px;">
            <h3 class="bg-body">Daftar Menu Resto Dinus</h3>
            <hr>
            <table class="table bg-body">
                <thead>
                  <tr class="bg-body">
                    <th scope="col">Menu ID</th>
                    <th scope="col">Jenis Menu</th>
                    <th scope="col">Nama Menu</th>
                    <th scope="col">Harga</th>
                    <th scope="col">Gambar</th>
                  </tr>
                </thead>
                <tbody>
                    
                    <% for (let menu of result) { %>
                        <tr class="bg-body">
                          <th scope="row"><%= menu.menu_id%></th>
                          <th scope="row"><%= menu.jenis_menu%></th>
                          <th scope="row"><%= menu.nama_menu%></th>
                          <th scope="row"><%= menu.harga_menu%></th>
                          <th scope="row"><%= menu.image%></th>
                        </tr>
                    <% } %>
                </tbody>
            </table>
      
            <br>

            <!-- <button type="button" class="btn btn-success" onclick="window.location.href='http://localhost:3000/update'">Update</button> -->
          </div>

          <div class="container shadow p-3 mb-5 bg-body rounded" style="margin: 5px;">
            <!-- Form Insert -->
            <form action="/admin/insert" method="post" class="bg-body">
                <h3 class="bg-body mb-3">Insert Menu</h3>

                <div class="input-group mb-3">
                    <label class="input-group-text" for="jenis_menu">Jenis Menu</label>
                    <select class="form-select" id="jenis_menu" name="jenis_menu">
                      <option selected>Choose...</option>
                      <option value="Makanan">Makanan</option>
                      <option value="Minuman">Minuman</option>
                      <option value="Camilan">Camilan</option>
                    </select>
                </div>

                <div class="row mb-3 bg-body">
                  <label for="nama" class="col-sm-2 col-form-label bg-body">Nama Menu</label>
                  <div class="col-sm-10 bg-body">
                    <input type="text" name="nama_menu" class="form-control">
                  </div>
                </div>
                <div class="row mb-3">
                  <label for="kelas" class="col-sm-2 col-form-label bg-body">Harga</label>
                  <div class="col-sm-10 bg-body">
                    <input type="text" name="harga_menu" class="form-control">
                  </div>
                </div>

                <div class="mb-3 bg-body">
                    <input class="form-control bg-body" type="file" id="formFile" name="image">
                </div>
                <input type="submit" class="btn btn-primary mb-3" value="Insert">
            </form>

            <hr>

            <!-- Form Update -->
            <form action="/admin" method="post" class="bg-body">
              <h3 class="bg-body mb-3">Update Menu</h3>
              
            </form>

            <hr>

            <!-- Form Delete -->
            <form action="/admin/delete" method="post" class="bg-body">
                <h3 class="bg-body mb-3">Delete Menu</h3>
                <div class="row mb-3 bg-body">
                  <label for="menu_id" class="col-sm-2 col-form-label bg-body">Menu ID</label>
                  <div class="col-sm-10 bg-body">
                    <input type="text" name="menu_id" class="form-control">
                  </div>
                </div>
                <input type="submit" class="btn btn-danger" value="Delete">
            </form>
        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>